<LinearLayout
	style="?android:buttonBarStyle"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<include layout="@layout/include_movie_single_list"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/btn_flat_background">

		<Button
			android:id="@+id/movie_single_btn"
			style="?android:buttonBarButtonStyle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/btn_add"/>
	</FrameLayout>

	<include layout="@layout/include_movie_collection_list"/>

	<LinearLayout
		style="?android:buttonBarStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/btn_flat_background"
		android:orientation="horizontal">

		<Button
			android:id="@+id/movies_collection_btn"
			style="?android:buttonBarButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/btn_add_all_col"/>

		<Button
			android:id="@+id/movies_vararg_btn"
			style="?android:buttonBarButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/btn_add_all_var"/>
	</LinearLayout>

</LinearLayout>