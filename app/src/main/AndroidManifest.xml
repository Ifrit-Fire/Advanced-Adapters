<manifest
	package="com.sawyer.advadapters.app"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:name=".App"
		android:allowBackup="true"
		android:icon="@drawable/ic_icon"
		android:label="@string/app_name"
		android:logo="@drawable/ic_logo"
		android:theme="@style/AppTheme">

		<!-- Android Adapter Activities -->
		<activity
			android:name=".adapters.androidarrayadapter.AndroidAdapterActivity"
			android:label="@string/activity_android_arrayadapter">
		</activity>

		<!-- Array Adapter Activities -->
		<activity
			android:name=".adapters.absarrayadapter.ArrayAdapterActivity"
			android:label="@string/activity_absarrayadapter">
		</activity>
		<activity
			android:name=".adapters.nfarrayadapter.NFArrayAdapterActivity"
			android:label="@string/activity_nfarrayadapter">
		</activity>

		<!-- SparseArray Adapter Activities-->
		<activity
			android:name=".adapters.sparseadapter.SparseAdapterActivity"
			android:label="@string/activity_sparseadapter">
		</activity>
		<activity
			android:name=".adapters.nfsparseadapter.NFSparseAdapterActivity"
			android:label="@string/activity_nfsparseadapter">
		</activity>

		<!-- JSONArray Adapter Activities-->
		<activity
			android:name=".adapters.jsonarraybaseadapter.JSONArrayBaseAdapterActivity"
			android:label="@string/activity_jsonarray_baseadapter">
		</activity>
		<activity
			android:name=".adapters.jsonarraybaseadapter.UnitTestJSONArrayActivity"
			android:label="@string/activity_jsonarray_unittest">
		</activity>
		<activity
			android:name=".adapters.simplejsonarraybaseadapter.SimpleJSONArrayBaseAdapterActivity"
			android:label="@string/activity_simplejsonarray_baseadapter">
		</activity>
		<activity
			android:name=".adapters.simplejsonarraybaseadapter.UnitTestJSONArrayActivity"
			android:label="@string/activity_simplejsonarray_unittest">
		</activity>

		<!-- Misc Support Activities-->
		<activity
			android:name=".MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".AboutActivity"
			android:label="@string/title_about">
		</activity>
	</application>

</manifest>
